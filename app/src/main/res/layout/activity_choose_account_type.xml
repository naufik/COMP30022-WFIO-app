<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseAccountType">

    <TextView
        android:id="@+id/textView"
        android:layout_width="127dp"
        android:layout_height="38dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Are you a..."
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.09" />

    <TextView
        android:id="@+id/carerText"
        android:layout_width="52dp"
        android:layout_height="24dp"
        android:layout_marginBottom="164dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="19dp"
        android:text="Carer"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseCarer"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/elderText"
        android:layout_width="52dp"
        android:layout_height="24dp"
        android:layout_marginBottom="164dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="19dp"
        android:text="Elder"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseCarer"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/chooseElder"
        android:layout_width="123dp"
        android:layout_height="238dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/elder" />

    <ImageView
        android:id="@+id/chooseCarer"
        android:layout_width="123dp"
        android:layout_height="233dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="144dp"
        app:layout_constraintEnd_toStartOf="@+id/chooseElder"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/carer" />

</android.support.constraint.ConstraintLayout>